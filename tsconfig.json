{
	"compilerOptions": {
		/* Basic Options */
		"target": "ES2021",
		"module": "ES2020",
		"lib": ["DOM"],
		"allowJs": true,
		"noEmit": true,
		/* Module Resolution Options */
		"moduleResolution": "Node",
		"esModuleInterop": true,
		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
